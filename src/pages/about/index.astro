---
import Logo from '../../components/logo/Logo';
import MainButton from '../../components/main_button/MainButton';
import Scroller from '../../components/scroller/Scroller';
import Layout from '../../layouts/Layout.astro';
import './_index.scss';
---

<Layout>
	<section class="hero">
		<img class="hero__background" src="/backgrounds/hero-background-static.svg" alt="" />
		<article class="hero__content">
			<h1 class="hero__title">
				Одна из многоопциональных компаний муранской области в сфере утилизации отходов
			</h1>
			<MainButton client:load text="УТИЛИЗАЦИЯ ОТХОДОВ" href="/" />
		</article>
		<Scroller
			pages={[
				{
					title: "Главная",
					href: "/",
					image: "/images/main-page-og.png",
				},
				{
					title: "Услуги",
					href: "/about",
					image: "/images/main-page-og.png",
				},
				{
					title: "Контакты",
					href: "/contacts",
					image: "/images/main-page-og.png",
				},
			]}
			client:load
		/>
	</section>
</Layout>
