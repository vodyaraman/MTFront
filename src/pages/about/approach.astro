---
import Layout from "../../layouts/Layout.astro";
import AnimatedBackground from "@/components/wave_background/Background";
import Scroller from "@/components/scroller/Scroller";
import Slider from "@/components/about-components/slider/Slider.astro";
import "../about/_index.scss";
import MainButton from "@/components/main_button/MainButton";
import AnimationWrapper from "./_animation";
---

<Layout>
  <section class="about about--approach">
    <section class="about__content about__content--approach">
      <h3 class="about__subheading">
        <span class="selection-mimic">Экологический подход</span>
      </h3>
      <p class="about__text">
        Мы охватываем все этапы работы с отходами: выстраиваем логистику,
        сопровождаем документооборот, обеспечиваем технологическую переработку.
        Наш подход основан на глубоком понимании потребностей каждого клиента, а
        также соблюдении требований законодательства и принципов экологической
        безопасности.
      </p>
    </section>

    <Slider />
    <MainButton text="Оставить заявку на обратную связь" href="/contacts" client:load />
  </section>

  <Scroller
    pages={[
      { title: "Поиск наименований", href: "/search", image: "/images/main-page-og.png" },
      {
        title: "Поиск наименований",
        href: "/search",
        image: "/images/main-page-og.png",
      },
      {
        title: "Связаться с нами",
        href: "/contacts",
        image: "/images/main-page-og.png",
      },
    ]}
    client:load
  />

  <AnimationWrapper client:only />
</Layout>
