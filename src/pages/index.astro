---
import Layout from "../layouts/Layout.astro";
import MainButton from "../components/main_button/MainButton";
import "./_index.scss";
import Logo from "../components/logo/Logo";
import GlobeWrapper from "../components/globe-icon/GlobeWrapper";
import Scroller from "../components/scroller/Scroller";
import AnimationWrapper from "./_animation";
import Background from "../components/wave_background/Background";
---

<Layout>
	<Background client:load/>
	<section class="hero">
		<img
			class="hero__background static"
			src="/backgrounds/hero-background-static.svg"
			alt=""
			transition:persist
		/>
		<img
			class="hero__background"
			src="/backgrounds/hero-overlay.svg"
			alt=""
			transition:persist
		/>
		<article class="hero__content">
			<Logo client:visible transition:persist />
			<h1 class="hero__title">
				Мы создаем лучшие условия для экологии и бизнеса
			</h1>
			<MainButton client:load text="УТИЛИЗАЦИЯ ОТХОДОВ" href="/about" />
		</article>
		<div class="hero__showcase">
			<GlobeWrapper client:load />
		</div>
		<Scroller targetPage="/about" client:idle />
		<AnimationWrapper client:load/>
	</section>
</Layout>

