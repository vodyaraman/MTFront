<div class="loader">
    <img id="loader-image" src="/icons/main-icon.svg" alt="" />
</div>

<style>
    .loader {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        background-color: rgb(0, 0, 0);
    }

    @keyframes pulse {
        0% {
            transform: scale(1);
            opacity: 1;
        }
        50% {
            transform: scale(1.1);
            opacity: 0.7;
        }
        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    #loader-image {
        animation: pulse 1.2s ease-in-out infinite;
        width: 80px;
        height: 80px;
        animation: pulse 1.2s ease-in-out infinite;
        will-change: transform, opacity;
        pointer-events: none;
        user-select: none;
    }
</style>
